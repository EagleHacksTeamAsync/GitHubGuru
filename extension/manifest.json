{
  "manifest_version": 3,
  "name": "Github Guru",
  "description": "GitHub Chrome Extension to output notifications and track pull requests",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "images/logo.png"
  },
  "permissions": ["identity", "storage", "https://api.github.com/"],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["dist/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "icons": {
    "16": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  }
}
